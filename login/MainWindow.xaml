<Window x:Class="login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" Height="36" TextChanged="TextBox_TextChanged_1"/>
        <Button x:Name="LoginButton" Content="Přihlásit se" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="55" Width="88" Click="Button_Click"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Width="300" Height="40"/>

    </Grid>
</Window>
